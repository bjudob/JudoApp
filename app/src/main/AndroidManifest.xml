<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.botond.judoapp_4">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/judogi_icon_2"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/judogi_icon_2"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        <activity android:name=".activities.auth.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.auth.LogInActivity" />
        <activity android:name=".activities.auth.SignUpActivity" />
        <activity android:name=".activities.ProfileActivity" />
        <activity android:name=".activities.LearnActivity" />
        <activity android:name=".activities.ScoreboardActivity" />
        <activity android:name=".activities.StopwatchActivity" />
        <activity android:name=".activities.learn.ViewLectureActivity" />
        <activity
            android:name=".activities.ProfileSettingsActivity"
            android:label="@string/title_activity_profile_settings"
            android:parentActivityName=".activities.ProfileActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.botond.judoapp_4.activities.ProfileActivity" />
        </activity>
        <activity android:name=".activities.learn.belts.BeltsActivity" />
        <activity android:name=".activities.learn.belts.ViewBeltActivity" />
        <activity android:name=".activities.learn.belts.ViewThrowActivity"></activity>
    </application>

</manifest>