<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.botond.judoapp_4.ProfileActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarProfile"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="#af1ea7" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:text="Tap on the camera to choose profile picture"
        android:textSize="25sp"
        tools:layout_editor_absoluteY="52dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="214dp">

        <ImageView
            android:id="@+id/imageViewCamera"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            app:srcCompat="@mipmap/judogi_icon_2" />

        <ProgressBar
            android:id="@+id/progressbarProfileImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />

    </RelativeLayout>


    <EditText
        android:id="@+id/editTextCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="412dp" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textViewVerifiedEmail"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:text="Verified"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="513dp" />

    <include
        android:id="@+id/includeBottomNav"
        layout="@layout/element_bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>

