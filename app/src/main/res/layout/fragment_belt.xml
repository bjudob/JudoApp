<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.learn.belts.BeltFragment">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/scaled_background"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_learn_menu"
                android:text="White    (6 Kyu)"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonYellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_learn_menu"
                android:text="Yellow  (5 Kyu)"
                android:textColor="@color/colorYellow"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonOrange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_learn_menu"
                android:text="Orange  (4 Kyu)"
                android:textColor="@color/colorOrange"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonGreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_learn_menu"
                android:text="Green    (3 Kyu)"
                android:textColor="@color/colorGreen"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_learn_menu"
                android:text="Blue     (2 Kyu)"
                android:textColor="@color/colorBlue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonBrown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_learn_menu"
                android:text="Brown   (1 Kyu)"
                android:textColor="@color/colorBrown"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_learn_menu"
                android:text="Black   (1 Dan)"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>